<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../../includes/header.ejs %>
    <link rel="stylesheet" href="/stylesheets/prove03Style/forms.css">
</head>

<body>
    <% include ../../../includes/nav.ejs %>

    <div class="center">
        <h1><%= Title %></h1>
    </div>

    <main>
        <div class="form-container">
        <form class="form" action="./edit-book" method="POST">

            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<%= book.title %>">


            <label for="imageUrl">Image URL</label>
            <input type="text" name="imageUrl" id="imageUrl" value="<%= book.imageUrl %>">

            <label for="genre">Genre</label>
            <input type="text" name="genre" id="genre" value="<%= book.genre %>">


            <label for="price">Price</label>
            <input type="number" name="price" id="price" step="0.01" value="<%= book.price %>">

            <label for="description">Description</label>
            <textarea name="description" id="description" rows="5" ><%= book.description %></textarea>

            <% if (editing) { %>
                <input type="hidden" value="<%= book._id %>" name="productId">
            <% } %>

            <button class="btn" type="submit">Add Product</button>
        </form>
    </div>
    </main>
</body>