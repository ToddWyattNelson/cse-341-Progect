                <li class="main-nav__item"><a class="<%= path === '/login' ? 'active' : '' %>"
                        href="/proveRoutes/prove03Routes/prove03R/login">Login</a></li>
                <li class="main-nav__item"><a class="<%= path === '/signup' ? 'active' : '' %>"
                        href="/proveRoutes/prove03Routes/prove03R/signup">Signup</a></li>
                <% } else { %>
                <li class="main-nav__item">
                    <form action="/proveRoutes/prove03Routes/prove03R/logout" method="post">
                        <button type="submit">Logout</button>
                    </form>
                </li>
                <% } %>
